<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/id_guideline_recyclerview_left"
        app:layout_constraintGuide_percent="0.03125"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/id_guideline_recyclerview_right"
        app:layout_constraintGuide_percent="0.96875"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/id_guideline_recyclerview_top"
        app:layout_constraintGuide_percent="0.08359375"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/id_guideline_recyclerview_bottom"
        app:layout_constraintGuide_percent="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recyclerview"
        app:layout_constraintTop_toTopOf="@id/id_guideline_recyclerview_top"
        app:layout_constraintBottom_toBottomOf="@id/id_guideline_recyclerview_bottom"
        app:layout_constraintLeft_toLeftOf="@id/id_guideline_recyclerview_left"
        app:layout_constraintRight_toRightOf="@id/id_guideline_recyclerview_right"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>