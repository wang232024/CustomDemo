<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TouchActivity">

    <com.example.demo.ContainerOut
        android:layout_marginTop="30dp"
        android:id="@+id/container_out"
        android:background="#33ff0000"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="400dp">

        <com.example.demo.ContainerIn
            android:id="@+id/container_in"
            android:orientation="vertical"
            android:background="#3300ff00"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp">

            <com.example.demo.CustomView
                android:id="@+id/view"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#330000ff"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </com.example.demo.ContainerIn>

    </com.example.demo.ContainerOut>

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/touch_tv1"
            android:text="1234567890"
            android:textSize="30sp"
            android:background="#3399ccff"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/touch_tv2"
            android:text="1234567890"
            android:textSize="30sp"
            android:background="#6699ccff"
            android:includeFontPadding="false"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
            <!--includeFontPadding用来设置文本框是否包含顶部和底部留白（左右两侧默认没有留白），将其设置为false，TextView就会取消2px的留白-->
    </LinearLayout>

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/touch_add"
            android:text="add"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/touch_del"
            android:text="del"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>