<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_longclick_container"
    android:background="#99ccff"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageButton
        android:id="@+id/recyclerview_longclick_cancel"
        android:background="@drawable/ic_cancel_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    
    <ImageButton
        android:id="@+id/recyclerview_longclick_delete"
        android:background="@drawable/ic_delete_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <ImageButton
        android:id="@+id/recyclerview_longclick_all"
        android:background="@drawable/ic_all_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recyclerview_longclick_delete"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>